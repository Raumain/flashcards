{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"types": ["bun"]
	},
	"include": ["src/**/*", "app.config.ts", "tests/**/*"],
	"exclude": ["node_modules", ".vinxi", ".output"]
}
